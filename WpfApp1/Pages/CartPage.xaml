<Page x:Class="WpfApp1.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CartPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Корзина" FontSize="24" FontWeight="Bold" Margin="20"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="ListCart" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="10" Width="280">
                            <StackPanel>
                                <Image Source="{Binding PhotoPath}" Height="180" Stretch="UniformToFill"/>

                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>

                                <TextBlock Text="{Binding Price, StringFormat=Цена: {0:N2} ₽}" FontSize="13" Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextDecorations" Value="{x:Null}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding FinalPrice, StringFormat=Цена со скидкой: {0:N2} ₽}" 
                                           FontWeight="Bold" Foreground="Red" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding DiscountPercent, StringFormat=Скидка: {0}%}" 
                                           FontSize="12" Foreground="Orange">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding DiscountDescription}" FontSize="12" Foreground="Gray" TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                                    <Button Content="−" Width="30" Height="30" Click="Decrease_Click" Tag="{Binding}"/>
                                    <TextBlock Text="{Binding Quantity}" FontSize="16" Width="40" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <Button Content="+" Width="30" Height="30" Click="Increase_Click" Tag="{Binding}"/>
                                </StackPanel>

                                <TextBlock Text="{Binding Sum, StringFormat=Сумма: {0:N2} ₽}" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,0" TextAlignment="Center"/>

                                <Button Content="Удалить" Click="Remove_Click" Tag="{Binding}" Background="#C62828" Foreground="White" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <TextBlock x:Name="TotalItemsText" FontSize="14" Margin="0,0,20,0"/>
            <TextBlock x:Name="TotalSumText" FontSize="14" Margin="0,0,20,0"/>
            <Button Content="Оформить" Click="CheckoutButton_Click" Background="Green" Foreground="White" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>