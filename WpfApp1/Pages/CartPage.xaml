<Page x:Class="WpfApp1.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CartPage"
      Background="#F5F9F3"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="cGreen">#2D6A4F</Color>
        <Color x:Key="cDanger">#C62828</Color>

        <SolidColorBrush x:Key="bGreen" Color="{StaticResource cGreen}"/>
        <SolidColorBrush x:Key="bDanger" Color="{StaticResource cDanger}"/>

        <!-- Тень -->
        <DropShadowEffect x:Key="HardShadow"
                          BlurRadius="0"
                          ShadowDepth="4"
                          Opacity="0.4"
                          Color="{StaticResource cGreen}"/>

        <!-- Стиль Кнопки -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource bGreen}" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource bDanger}"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Корзина"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{StaticResource bGreen}"
                   Margin="30,20,30,0"/>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,10,0,0">
            <ItemsControl x:Name="ListCart"
                          Margin="20,10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300"
                                Margin="10"
                                Padding="12"
                                Background="White"
                                CornerRadius="12"
                                Effect="{StaticResource HardShadow}">

                            <StackPanel>
                                <Image Source="{Binding PhotoPath}" 
       Height="150" 
       Stretch="UniformToFill" 
       Margin="0,0,0,10"
       ClipToBounds="True"
       SnapsToDevicePixels="True"
       UseLayoutRounding="True"
       TextOptions.TextRenderingMode="ClearType">
                                    <Image.BitmapEffect>
                                        <DropShadowBitmapEffect ShadowDepth="0" />
                                    </Image.BitmapEffect>
                                </Image>


                                <TextBlock Text="{Binding Name}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>

                                <TextBlock Text="{Binding Price, StringFormat=Цена: {0:N2} ₽}"
                                           Foreground="Gray"
                                           FontSize="13"
                                           TextDecorations="Strikethrough">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding FinalPrice, StringFormat=Цена со скидкой: {0:N2} ₽}"
                                           Foreground="Red"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>

                                <TextBlock Text="{Binding DiscountPercent, StringFormat=Скидка: {0}%}"
                                           Foreground="Red"
                                           FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding DiscountDescription}"
                                           FontSize="11"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowDiscount}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Кол-во -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,8">
                                    <Button Content="−"
                                            Width="30" Height="30"
                                            Tag="{Binding}"
                                            Click="Decrease_Click"
                                            Background="#F1F1F1"/>
                                    <TextBlock Text="{Binding Quantity}"
                                               FontSize="16"
                                               Width="40"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Button Content="+" Width="30" Height="30"
                                            Tag="{Binding}"
                                            Click="Increase_Click"
                                            Background="#F1F1F1"/>
                                </StackPanel>

                                <!-- Сумма -->
                                <TextBlock Text="{Binding Sum, StringFormat=Сумма: {0:N2} ₽}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           TextAlignment="Center"/>

                                <!-- Удалить -->
                                <Button Content="Удалить"
                                        Margin="0,8,0,0"
                                        Tag="{Binding}"
                                        Click="Remove_Click"
                                        Style="{StaticResource DeleteButton}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="20">
            <TextBlock x:Name="TotalItemsText"
                       FontSize="14"
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalSumText"
                       FontSize="14"
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"/>
            <Button Content="Оформить"
                    Click="CheckoutButton_Click"
                    Style="{StaticResource RoundedButton}"/>
        </StackPanel>
    </Grid>
</Page>
