<Page x:Class="WpfApp1.Pages.EditDiscountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F9F3"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType"
      UseLayoutRounding="True">

    <!-- ═════════════  RESOURCES  ═════════════ -->
    <Page.Resources>

        <!-- общий зелёный цвет  -->
        <SolidColorBrush x:Key="cGreen" Color="#2D6A4F"/>

        <!-- жёсткая тень (как во всех формах) -->
        <DropShadowEffect x:Key="HardShadow"
                          BlurRadius="0"
                          ShadowDepth="4"
                          Opacity="0.4"
                          Color="#2D6A4F"/>


        <!-- ========== Скруглённые поля ввода ========== -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== Скруглённый ComboBox ========== -->
        <!-- главное изменение ↓: ContentPresenter показывает свойство name -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"/>

                            <!-- отображаем name выбранного растения -->
                            <TextBlock Margin="10,0,35,0"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Text="{Binding SelectedItem.name,
                                                      RelativeSource={RelativeSource AncestorType=ComboBox}}"/>

                            <!-- стрелка -->
                            <ToggleButton x:Name="PART_DropDownToggle"
                                          Width="30"
                                          HorizontalAlignment="Right"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen,
                                                             RelativeSource={RelativeSource TemplatedParent},
                                                             Mode=TwoWay}">
                                <Path Data="M0,0 L4,4 8,0 Z"
                                      Fill="{StaticResource cGreen}"
                                      Width="8" Height="4"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </ToggleButton>

                            <!-- Popup со списком -->
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border Background="White"
                                        BorderBrush="#CED4DA"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="RoundedDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
         
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Padding="10,0"
                                                   VerticalContentAlignment="Center"/>
                                <Button x:Name="PART_Button"
                                        Width="30"
                                        HorizontalAlignment="Right"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Cursor="Hand">
                                    <Path Data="M0,0 L4,4 8,0 Z"
                                          Fill="{StaticResource cGreen}"
                                          Width="8" Height="4"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Button>

                                <!-- выпадающий календарь -->
                                <Popup x:Name="PART_Popup"
                                       Placement="Bottom"
                                       AllowsTransparency="True"
                                       StaysOpen="False"
                                       IsOpen="{TemplateBinding IsDropDownOpen}">
                                    <Border Background="White"
                                         
                                            BorderThickness="1"
                                            CornerRadius="6">
                                        <Calendar x:Name="PART_Calendar"
                                                  IsTodayHighlighted="True"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== Скруглённая кнопка ========== -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource cGreen}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- ═════════════  CONTENT  ═════════════ -->
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="White"
                CornerRadius="16"
                Padding="30"
                Width="420" 
                Effect="{StaticResource HardShadow}">
            <StackPanel>

                <TextBlock Text="Скидка"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource cGreen}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Растение -->
                <TextBlock Text="Растение:" FontWeight="Bold" Margin="0,0,0,4"/>
                <ComboBox x:Name="cbPlants"
                          Style="{StaticResource RoundedComboBox}"
                          DisplayMemberPath="name"
                          SelectedValuePath="id"
                          Margin="0,0,0,14"/>

                <!-- Процент -->
                <TextBlock Text="Процент скидки (%):" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox x:Name="tbDiscountPercent"
                         Style="{StaticResource RoundedTextBox}"
                         Margin="0,0,0,14"/>

                <!-- Начало -->
                <TextBlock Text="Начало действия:" FontWeight="Bold" Margin="0,0,0,4"/>
                <DatePicker x:Name="dpStart"
                            Style="{StaticResource RoundedDatePicker}"
                            Margin="0,0,0,14"/>

                <!-- Окончание -->
                <TextBlock Text="Окончание действия:" FontWeight="Bold" Margin="0,0,0,4"/>
                <DatePicker x:Name="dpEnd"
                            Style="{StaticResource RoundedDatePicker}"
                            Margin="0,0,0,14"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox x:Name="tbDescription"
                         Style="{StaticResource RoundedTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="70"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,20"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Сохранить"
                            Style="{StaticResource RoundedButton}"
                            Width="130"
                            Click="Save_Click"
                            Margin="0,0,10,0"/>

                    <Button Content="Отмена"
                            Style="{StaticResource RoundedButton}"
                            Background="#ADB5BD"
                            Width="130"
                            Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>