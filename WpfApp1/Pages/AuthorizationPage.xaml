<Page x:Class="WpfApp1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="324" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="238,113,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Foreground="#FF0C0C0C" FontSize="18"/>
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top" Width="324" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="238,187,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Foreground="#FF0C0C0C" FontSize="18"/>
        <Button x:Name="btnLogin" Content="Авторизоваться" HorizontalAlignment="Center" Margin="0,263,0,0" VerticalAlignment="Top" Width="129" Height="38" Background="#FF1C5D1A" FontSize="14" BorderBrush="#FF447125" Foreground="White" FontWeight="Medium" FontFamily="Segoe UI Semilight" Click="btnLogin_Click"/>
        <Button x:Name="btnRegistration" Content="Регистрация" HorizontalAlignment="Center" Height="32" Margin="0,318,0,0" VerticalAlignment="Top" Width="128" Click="btnRegistration_Click" Background="#FFBB7337" Foreground="White"/>

    </Grid>
</Page>
