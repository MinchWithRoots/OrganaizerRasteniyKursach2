<Page x:Class="WpfApp1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AuthorizationPage">

    <!-- ──────────  RESOURCES  ────────── -->
    <Page.Resources>

        <!-- Скруглённый TextBox -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle"   Value="True"/>
            <Setter Property="FontSize"                Value="14"/>
            <Setter Property="Padding"                 Value="6"/>
            <Setter Property="Margin"                  Value="0,4,0,8"/>
            <Setter Property="Background"              Value="#F1F5F2"/>
            <Setter Property="BorderBrush"             Value="#CED4DA"/>
            <Setter Property="BorderThickness"         Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Скруглённый PasswordBox -->
        <Style TargetType="PasswordBox" x:Key="RoundedPasswordBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle"   Value="True"/>
            <Setter Property="FontSize"                Value="14"/>
            <Setter Property="Padding"                 Value="6"/>
            <Setter Property="Margin"                  Value="0,4,0,8"/>
            <Setter Property="Background"              Value="#F1F5F2"/>
            <Setter Property="BorderBrush"             Value="#CED4DA"/>
            <Setter Property="BorderThickness"         Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Height"            Value="40"/>
            <Setter Property="Foreground"        Value="White"/>
            <Setter Property="FontWeight"        Value="SemiBold"/>
            <Setter Property="FontSize"          Value="16"/>
            <Setter Property="BorderThickness"   Value="0"/>
            <Setter Property="Cursor"            Value="Hand"/>
            <Setter Property="Margin"            Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1B7C5C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#145A44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- ──────────  LAYOUT  ────────── -->
    <Grid Background="#F5F9F3"
          UseLayoutRounding="True"
          TextOptions.TextFormattingMode="Display"
          TextOptions.TextRenderingMode="ClearType">

        <Border Width="300"
                Padding="20"
                CornerRadius="20"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <!-- Жёсткая тень без размытия -->
                <DropShadowEffect BlurRadius="0"
                                  ShadowDepth="4"
                                  Opacity="0.4"
                                  Color="#2D6A4F"/>
            </Border.Effect>

            <StackPanel>

                <!-- Логотип -->
                <Image Source="/Images/GrowzyLogo.png"
                       Width="80" Height="80"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <!-- Заголовок -->
                <TextBlock Text="Авторизация"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2D6A4F"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Логин -->
                <TextBlock Text="Логин" Foreground="Black"/>
                <TextBox x:Name="tbLogin"
                         Style="{StaticResource RoundedTextBox}"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль" Foreground="Black"/>
                <Grid>
                    <PasswordBox x:Name="tbPassword"
                 Style="{StaticResource RoundedPasswordBox}"
                 PasswordChar="●"/>

                    <TextBox     x:Name="tbVisiblePwd"
                 Style="{StaticResource RoundedTextBox}"
                 Visibility="Collapsed"/>
                </Grid>

                <!-- Checkbox -->
                <CheckBox Content="Показать пароль"
                          Margin="0,5,0,15"
                          Checked="ShowPassword_Checked"
                          Unchecked="ShowPassword_Unchecked"/>

                <!-- Кнопки -->
                <Button Content="Войти"
                        Background="#2D6A4F"
                        Style="{StaticResource StyledButton}"
                        Click="Login_Click"/>

                <Button Content="Регистрация"
                        Background="#95D5B2"
                        Style="{StaticResource StyledButton}"
                        Click="Register_Click"
                        Margin="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
