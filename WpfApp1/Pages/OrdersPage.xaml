<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="WpfApp1.Pages.OrdersPage"
    Title="Админ: Заказы"
    av:DesignHeight="401.423"
    av:DesignWidth="905.337">

    <Grid>
        <!-- Фиксированный верхний контейнер -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Панель сортировки и поиска -->
            <RowDefinition Height="*"/>
            <!-- Список заказов -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock
            Grid.Row="0"
            Text="Список заказов"
            FontSize="24"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="10" />

        <!-- Панель сортировки и поиска -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center">
            <!-- Фильтрация по статусу -->
            <ComboBox x:Name="ComboStatusFilter" Width="160" Margin="5" SelectionChanged="ComboStatusFilter_SelectionChanged">
                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                <ComboBoxItem Content="Ожидает оплаты"/>
                <ComboBoxItem Content="Обрабатывается"/>
                <ComboBoxItem Content="Доставляется"/>
                <ComboBoxItem Content="Завершен"/>
            </ComboBox>

            <!-- Сортировка по дате -->
            <ComboBox x:Name="ComboSort" Width="160" Margin="5" SelectionChanged="ComboSort_SelectionChanged">
                <ComboBoxItem Content="Дата: по возрастанию"/>
                <ComboBoxItem Content="Дата: по убыванию"/>
                <ComboBoxItem Content="Сумма: по возрастанию"/>
                <ComboBoxItem Content="Сумма: по убыванию"/>
            </ComboBox>

            <!-- Поиск по ID или email -->
            <TextBox x:Name="TextSearch" Width="200" Height="23" Margin="5" TextChanged="TextSearch_TextChanged"/>
        </StackPanel>

        <!-- Список заказов -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="OrdersList" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical" IsItemsHost="True" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="5" Padding="10" CornerRadius="8" Width="600">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о заказе -->
                                <StackPanel Grid.Column="0" Width="200">
                                    <TextBlock Text="{Binding OrderID}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding UserEmail}" FontStyle="Italic" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding OrderDate, StringFormat=Дата: dd.MM.yyyy}" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Status}" Foreground="#FFA500" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding TotalAmount, StringFormat=Сумма: {0:N2} ₽}" FontWeight="Bold" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Детали заказа -->
                                <StackPanel Grid.Column="1" Margin="10,0">
                                    <ItemsControl ItemsSource="{Binding Details}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Vertical" IsItemsHost="True"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#EEE" BorderThickness="1" Margin="5" Padding="5" CornerRadius="5">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding PlantName}" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Quantity, StringFormat=Кол-во: {0}}" Margin="0,3,0,0"/>
                                                        <TextBlock Text="{Binding Price, StringFormat=Цена: {0:N2} ₽}" Margin="0,3,0,0"/>
                                                        <TextBlock Text="{Binding Total, StringFormat=Сумма: {0:N2} ₽}" FontWeight="Bold" Margin="0,3,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>