<Page
    x:Class="WpfApp1.Pages.CheckoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Оформление заказа">

    <Grid Background="White" Margin="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="420">
            <TextBlock Text="Оформление заказа" FontSize="24" FontWeight="Bold" Margin="0,0,0,25" TextAlignment="Center"/>

            <!-- Адрес доставки -->
            <TextBlock Text="Адрес доставки:"/>
            <TextBox x:Name="TextAddress" Margin="0,5,0,15"/>

            <!-- Способ доставки -->
            <TextBlock Text="Способ доставки:"/>
            <ComboBox x:Name="ComboDelivery" Margin="0,5,0,15">
                <ComboBoxItem Content="Курьер"/>
                <ComboBoxItem Content="Самовывоз"/>
            </ComboBox>

            <!-- Способ оплаты -->
            <TextBlock Text="Способ оплаты:"/>
            <ComboBox x:Name="ComboPayment" Margin="0,5,0,15">
                <ComboBoxItem Content="Картой онлайн"/>
                <ComboBoxItem Content="Картой при получении"/>
                <ComboBoxItem Content="Наличными"/>
            </ComboBox>

            <!-- Комментарий -->
            <TextBlock Text="Комментарий к заказу (необязательно):"/>
            <TextBox x:Name="TextComment" Height="60" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Итоговая сумма -->
            <TextBlock x:Name="TotalAmountText" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20" TextAlignment="Center"/>

            <!-- Подтверждение -->
            <Button Content="Подтвердить заказ"
                    Background="#28A745" Foreground="White" Padding="10"
                    Click="ConfirmOrder_Click"/>

            <!-- Кнопка «Назад» -->
            <Button Content="Назад в каталог"
            Background="#607D8B"
            Foreground="White"
            Padding="10"
            
            Click="BackToCatalog_Click"/>
        </StackPanel>
    </Grid>
</Page>