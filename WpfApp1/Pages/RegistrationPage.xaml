<Page x:Class="WpfApp1.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация пользователя"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Margin="0,20">

            <TextBlock Text="Имя"/>
            <TextBox x:Name="nameTb" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Логин"/>
            <TextBox x:Name="loginTb" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="passwordTb" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Повторите пароль"/>
            <PasswordBox x:Name="repeatPasswordTb" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="emailTb" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон"/>
            <TextBox x:Name="phoneTb" Height="30" Margin="0,0,0,20"/>

            <Button x:Name="RegistrationButton"
                    Content="Зарегистрироваться"
                    Height="35"
                    Click="RegistrationButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    Margin="0,0,0,10"/>

            <Button x:Name="BackButton"
                    Content="Назад"
                    Height="30"
                    Click="BackButton_Click"
                    Background="LightGray"/>

        </StackPanel>
    </Grid>
</Page>
