<Page x:Class="WpfApp1.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Regiastration">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Имя" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Margin="0,10,0,0"/>
        <TextBox x:Name="nameTb" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding AuthorName}" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Логин" VerticalAlignment="Center" Grid.Row="1" Margin="0,10,0,0"/>
        <TextBox x:Name="loginTb" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Login}" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Пароль" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Margin="0,10,0,0"/>
        <PasswordBox x:Name="passwordTb" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Повторите пароль" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" Margin="0,10,0,0"/>
        <PasswordBox x:Name="repeatPasswordTb" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Email" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4" Margin="0,10,0,0"/>
        <TextBox x:Name="emailTb" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Email}" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Дата рождения" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5" Margin="0,10,0,0"/>
        <DatePicker x:Name="birthDateTb" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Стаж" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6" Margin="0,10,0,0"/>
        <TextBox x:Name="experienceTb" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Experience}" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" Text="Телефон" VerticalAlignment="Center" Grid.Column="0" Grid.Row="7" Margin="0,10,0,0"/>
        <TextBox x:Name="phoneTb" Grid.Column="1" Grid.Row="7" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Phone}" VerticalAlignment="Center" Width="250" Height="30" Margin="0,10,0,10"/>

        <Button x:Name="RegistrationButton" Grid.Column="1" Grid.Row="8" Content="Регистрация" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="30" Click="RegistrationButton_Click" Margin="0,10,0,10"/>

        <Button x:Name="BackButton" Grid.Column="1" Grid.Row="9" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="30" Click="BackButton_Click" Margin="0,10,0,10"/>
    </Grid>
</Page>