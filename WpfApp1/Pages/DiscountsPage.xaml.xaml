<Page x:Class="WpfApp1.Pages.DiscountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Скидки">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" VerticalAlignment="Center">
            <Button Content="Добавить скидку" Background="#FF8EB7A7" Click="AddDiscount_Click" Width="150" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Список скидок -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ListDiscounts" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300" Height="250" BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="10">
                            <StackPanel>
                                <!-- Название растения -->
                                <TextBlock Text="{Binding PlantName}" FontWeight="Bold" FontSize="16" Margin="0,5,0,0"/>

                                <!-- Процент скидки -->
                                <TextBlock Text="{Binding DiscountPercent, StringFormat=Скидка: {0}%}"
                                           Foreground="Red" FontWeight="Bold" Margin="0,5,0,0"/>

                                <!-- Описание -->
                                <TextBlock Text="{Binding Description}" FontSize="12" Margin="0,5,0,0"/>

                                <!-- Даты действия -->
                                <TextBlock Text="{Binding StartDate, StringFormat=Начало: {0:dd.MM.yyyy}}" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding EndDate, StringFormat=Окончание: {0:dd.MM.yyyy}}" Margin="0,5,0,0"/>

                                <!-- Цвет метки -->
                                <Border Background="{Binding Color}" Width="100" Height="20" Margin="0,10,0,0"/>

                                <!-- Кнопки управления -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                                    <Button Content="Редактировать" Background="LightBlue" Foreground="White" Padding="10,2"
                                            Click="EditDiscount_Click" Tag="{Binding}" Margin="0,0,10,0"/>
                                    <Button Content="Удалить" Background="Red" Foreground="White" Padding="10,2"
                                            Click="DeleteDiscount_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>