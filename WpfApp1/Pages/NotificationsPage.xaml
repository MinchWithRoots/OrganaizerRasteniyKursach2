<Page x:Class="WpfApp1.Pages.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F9F3"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType"
      Title="Уведомления">

    <Page.Resources>
        <!-- Зелёная кнопка -->
        <Style x:Key="RoundedGreenButton" TargetType="Button">
            <Setter Property="Background" Value="#2D6A4F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Зелёная тень для карточек -->
        <DropShadowEffect x:Key="CardShadow"
                          ShadowDepth="4"
                          BlurRadius="2"
                                 Opacity="0.4"
                          Color="#2D6A4F"
                          Direction="270"/>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,20">
            <TextBlock Text="🔔 Уведомления"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2D6A4F"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

            <Button Content="← Назад"
                    Style="{StaticResource RoundedGreenButton}"
                    Width="120"
                    Height="36"
                    DockPanel.Dock="Right"
                    Click="BackButton_Click"/>
        </DockPanel>

        <!-- Уведомления -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ListNotifications">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,0,0,20"
                                Effect="{StaticResource CardShadow}">
                            <StackPanel>
                                <TextBlock Text="{Binding PlantName}"
                                           FontWeight="Bold"
                                           FontSize="14"/>
                                <TextBlock Text="{Binding NotificationMessage}"
                                           FontSize="13"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
