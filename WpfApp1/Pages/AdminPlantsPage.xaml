<Page x:Class="WpfApp1.Pages.AdminPlantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#F5F9F3"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="cGreen">#2D6A4F</Color>
        <Color x:Key="cGreenLight">#4C824E</Color>
        <Color x:Key="cDanger">#C1121F</Color>

        <SolidColorBrush x:Key="bGreen" Color="{StaticResource cGreen}"/>
        <SolidColorBrush x:Key="bGreenLight" Color="{StaticResource cGreenLight}"/>
        <SolidColorBrush x:Key="bDanger" Color="{StaticResource cDanger}"/>

        <!-- Жёсткая тень -->
        <DropShadowEffect x:Key="HardShadow"
                          BlurRadius="0"
                          ShadowDepth="4"
                          Opacity="0.4"
                          Color="{StaticResource cGreen}"/>

        <!-- Стили ComboBox -->
        <Style x:Key="RoundedCombo" TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="#F1F5F2"
                            BorderBrush="#CED4DA"
                            BorderThickness="1"
                            CornerRadius="6"/>

                            <!-- ✔️ Показываем выбранный элемент -->
                            <ContentPresenter Margin="10,0,35,0"
                                      VerticalAlignment="Center"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}" />

                            <!-- кнопка-стрелка -->
                            <ToggleButton x:Name="PART_DropDownToggle"
                                  Width="32"
                                  HorizontalAlignment="Right"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen,
                                                      Mode=TwoWay,
                                                      RelativeSource={RelativeSource TemplatedParent}}">
                                <Path Width="8" Height="4"
                              Fill="{StaticResource bGreen}"
                              Data="M0,0 L4,4 8,0 Z"/>
                            </ToggleButton>

                            <!-- выпадающий список -->
                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           Focusable="False"
                           IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border Background="White"
                                CornerRadius="6"
                                BorderBrush="#CED4DA"
                                BorderThickness="1">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Стили поиска -->
        <Style x:Key="RoundedSearch" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="#F1F5F2" BorderBrush="#CED4DA"
                                BorderThickness="1" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="StyledBtn" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D6A4F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardBtnGreen" TargetType="Button" BasedOn="{StaticResource StyledBtn}">
            <Setter Property="MinWidth" Value="105"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2D6A4F"/>
        </Style>

        <Style x:Key="CardBtnRed" TargetType="Button" BasedOn="{StaticResource CardBtnGreen}">
            <Setter Property="Background" Value="{StaticResource bDanger}"/>
        </Style>
    </Page.Resources>

    <!-- ───── Layout ───── -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top panel -->
        <Border Padding="14">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5CB36E" Offset="1"/>
                    <GradientStop Color="#FFCEC77B"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="ComboFilter" Style="{StaticResource RoundedCombo}"
                          SelectionChanged="ComboFilter_SelectionChanged"/>

                <ComboBox x:Name="ComboSort" Grid.Column="2"
                          Style="{StaticResource RoundedCombo}"
                          SelectionChanged="ComboSort_SelectionChanged">
                    <ComboBoxItem Content="Название А-Я"/>
                    <ComboBoxItem Content="Название Я-А"/>
                    <ComboBoxItem Content="Цена ↑"/>
                    <ComboBoxItem Content="Цена ↓"/>
                </ComboBox>

                <TextBox x:Name="TextSearch" Grid.Column="4"
                         Style="{StaticResource RoundedSearch}"
                         TextChanged="TextSearch_TextChanged"/>

                <StackPanel Orientation="Horizontal" Grid.Column="6">
                    <Button Content="📦 Заказы" Style="{StaticResource StyledBtn}" Click="GoToOrders_Click"/>
                    <Button Content="% Скидки" Style="{StaticResource StyledBtn}" Margin="8,0,0,0" Click="GoToDiscounts_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" ClipToBounds="False">
            <ItemsControl x:Name="ListPlants" Margin="0,20" ClipToBounds="False">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="340" HorizontalAlignment="Center" ClipToBounds="False"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300" Margin="10"
                                CornerRadius="20"
                                Background="White"
                                Effect="{StaticResource HardShadow}">
                            <StackPanel>
                                <Image Source="{Binding PhotoPath}"
                                       Height="210" Margin="16,16,16,0"
                                       Stretch="UniformToFill"/>
                                <StackPanel Margin="16,10,16,16">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding CategoryName}" FontStyle="Italic" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Price, StringFormat=Цена: {0:0.00} ₽}" Margin="0,4,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Content="Редактировать"
                                                Style="{StaticResource CardBtnGreen}"
                                                Tag="{Binding}" Click="EditPlant_Click"/>
                                        <Button Content="Удалить"
                                                Style="{StaticResource CardBtnRed}"
                                                Margin="8,0,0,0"
                                                Tag="{Binding}" Click="DeletePlant_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="CountRecords"
                       VerticalAlignment="Center"/>

            <Button x:Name="bCreatePlant" Grid.Column="1"
                    Content="Добавить растение"
                    Style="{StaticResource StyledBtn}"
                    HorizontalAlignment="Right"
                    Click="bCreatePlant_Click"/>
        </Grid>
    </Grid>
</Page>
